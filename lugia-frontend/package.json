		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.17",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.3.6"
	},
	"dependencies": {
		"@dislyze/zoroark": "file:../zoroark",
		"felte": "^1.3.0"
	},
	"overrides": {
		"minimatch": "^10.2.1"
	},
	"_comment_overrides": "minimatch override: @typescript-eslint/typescript-estree depends on minimatch <10 which has a ReDoS vulnerability (GHSA-3ppc-4f35-3m26). All direct deps are upgraded; this bridges the gap until typescript-eslint updates its transitive dep. Remove once typescript-eslint ships with minimatch >=10.2.1."
}
